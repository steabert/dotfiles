[user]
	name = First Last
	email = first.last@mailprovider.com
[commit]
	gpgSign = true
[color]
	ui = auto
[diff]
	tool = diffuse
[merge]
	log = true
	tool = kdiff3
[mergetool]
	keepBackup = false
[core]
	editor = vim
[push]
	default = current
[alias]
        # Status
	s = status -s -b
	sl = status -vv
	sa = status -vv --ignored
	d = diff
	dc = diff --cached
	dl = diff --find-copies-harder
	l = log --graph --format=format:"'%C(bold blue)%h %C(auto)%d %C(reset) - %s %n %C(dim white)%an (%cd; %cr)'"
	ll = log --graph --format=format:"'%C(bold blue)%h %C(auto)%d %C(reset) - %s %n %C(dim white)%an (%cd; %cr)'" --branches
	la = log --graph --format=format:"'%C(bold blue)%h %C(auto)%d %C(reset) - %s %n %C(dim white)%an (%cd; %cr)'" --all
	# Moving around
	co = checkout
	set = reset --hard
	# Committing
	au = add -u .
	c = commit
	ca = commit --amend --no-edit
	cn = commit --no-verify
	cf = commit --fix
	ri = rebase --interactive --autosquash
	rc = rebase --continue
